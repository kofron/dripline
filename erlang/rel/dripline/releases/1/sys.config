[
 %% SASL config
 {sasl, [
         {sasl_error_logger, {file, "log/sasl-error.log"}},
         {errlog_type, error},
         {error_logger_mf_dir, "log/sasl"},      % Log directory
         {error_logger_mf_maxbytes, 10485760},   % 10 MB max file size
         {error_logger_mf_maxfiles, 5}           % 5 files max
        ]},

 {dl_core,
  [
   {couch_host, {"localhost",5984}},
   {worker_pools, [{couchdb_command_pool, [{size, 25}, {max_overflow, 50}], []}] }
  ]},

 {lager, [{colored, true}, 
          %note that these are in order, everything below is included
          {colors, [{debug,     "\e[0;34m"},    %purple
                    {info,      "\e[1;32m"},    %green
                    {notice,    "\e[1;36m" },   %cyan
                    {warning,   "\e[1;33m" },   %yellow
                    {error,     "\e[1;31m" },   %red
                    {critical,  "\e[1;35m" },   %pink
                    {alert,     "\e[1;44m" },   %white on blue
                    {emergency, "\e[1;41m" }]}, %white on red
          {handlers, [{lager_console_backend, info}]}]}

].
